<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Timer" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">36sp</item>
        <item name="android:hint">00:00:00</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="GameButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/game_button_rounded_black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>


    <style name="Player" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ScoreView" parent="Widget.AppCompat.TextView">
        <item name="android:background">#e4e3e3</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoText" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <style name="StartPauseBytton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/new_game_button</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ResetButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/reset_button</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>