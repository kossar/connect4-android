<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#666666" />
            <gradient android:angle="-90" android:startColor="#a70000" android:centerColor="#a50000" android:endColor="#ff5252"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#000000" />
            <gradient android:angle="-90" android:startColor="#ff5252" android:centerColor="#a50000" android:endColor="#a70000" />
        </shape>
    </item>
</selector>